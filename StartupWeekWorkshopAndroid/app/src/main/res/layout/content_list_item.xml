<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_list_border"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >

    <TextView
            android:id="@+id/listItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visit Grandma"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/listItemDescription"
            app:layout_constraintStart_toStartOf="parent"
            />

    <TextView
            android:id="@+id/listItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time to see grandma"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/listItemTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:id="@+id/listItemTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jun 14, 2019 10:58 pm"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/listItemDescription"
            app:layout_constraintEnd_toEndOf="parent"
    />
        <TextView
                android:id="@+id/listItemStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Progress"
                android:textColor="@android:color/holo_red_dark"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/listItemDescription"
                app:layout_constraintStart_toStartOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>